{
  "extends": "recommended",
  "rules": {
    "comments.ClassJavadoc": "off",
    "formatting.Indentation": {
      "spacesPerIndentLevel": 4,
      "severity": "info"
    },
    "braces.ElseBlockBraces": {
      "enabled": false
    },
    "braces.ForStatementBraces": {
      "enabled": false
    },
    "braces.IfStatementBraces": {
      "enabled": false
    },
    "braces.WhileStatementBraces": {
      "enabled": false
    },
    "unused.UnusedVariable": {
      "ignoreVariableNames": "__"
    },
    "size.NestedBlockDepth": {
      "maxNestedBlockDepth": 8
    },
    "size.ParameterCount": {
      "enabled": false
    },
    "naming.VariableName": {
      "enabled": false
    },
    "ConsecutiveBlankLines": {
      "enabled": false
    },
    "CatchException": {
      "enabled": false
    },
    "Instanceof": {
      "enabled": false
    },
    "ImplicitReturnStatement": {
      "enabled": false
    },
    "ImplicitClosureParameter": {
      "enabled": false
    },
    "convention.CompileStatic": {
      "enabled": false
    },
    "DuplicateStringLiteral": {
      "enabled": false
    },
    "DuplicateNumberLiteral": {
      "enabled": false
    },
    "UnnecessaryReturnKeyword": "info"
  }
}